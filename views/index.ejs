<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Train Booking Details</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .pnr-container {
            display: flex;
            justify-content: space-around;
            flex-wrap: wrap;
        }
        .pnr-details {
            flex: 0 0 48%;
            margin-bottom: 20px;
        }
        @media (max-width: 768px) {
            .pnr-details {
                flex: 0 0 100%;
            }
        }
    </style>
</head>
<body>
<div class="container mt-5">
    <h1 class="text-center mb-4">Train Booking Details</h1>
    <div class="pnr-container">
        <% dataList.forEach(data => { %>
        <div class="pnr-details">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><%= data.TrainNo %> - <%= data.TrainName %></h5>
                    <p class="card-text">Date of Journey: <%= data.Doj %></p>
                    <p class="card-text">From: <%= data.From %> to <%= data.To %></p>
                    <p class="card-text">Class: <%= data.Class %></p>
                </div>
            </div>
            <div class="mt-4">
                <h3>Passenger Status</h3>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Booking Status</th>
                            <th scope="col">Current Status</th>
                            <th scope="col">Coach Position</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% data.PassengerStatus.forEach(passenger => { %>
                        <tr>
                            <th scope="row"><%= passenger.Number %></th>
                            <td><%= passenger.BookingStatus %></td>
                            <td><%= passenger.CurrentStatus %></td>
                            <td><%= passenger.CoachPosition %></td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
        <% }); %>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
